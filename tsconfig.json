{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "es2021"],
    "module": "CommonJS",
    "jsx": "preserve",
    "noEmit": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./out"
  },
  "include": ["src/**/*"],
  "exclude": ["out", "node_modules"]
}
